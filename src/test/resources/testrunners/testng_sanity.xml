<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Opencart App Test Sanity Suite" thread-count="4"
	parallel="tests" verbose="4">

	<listeners>
		<listener
			class-name="com.taygo.tech.listeners.ExtentReportListener" />
		<listener
			class-name="com.taygo.tech.listeners.TestAllureListener" />

		<!-- <listener
		class-name="listeners.com.taygo.tech.AnnotationTransformer"
			/> -->
	</listeners>

	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />

		<classes>
			<class name="com.taygo.tech.tests.LoginPageTest" />
		</classes>
	</test>
</suite>	
